    "spy",
    "observer"
  ],
  "main": "lib/deep-observer.js",
  "types": "lib/deep-observer.d.ts",
  "files": [
    "lib"
  ],
  "author": "vvscode <v.vanchuk@tut.by>",
  "repository": {
    "type": "git",
    "url": "https://github.com/vvscode/deep-observer"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "eslint --fix 'src/**/*.ts'",
    "prebuild": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
